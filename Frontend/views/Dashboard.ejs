<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - TaskMaster</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
  <h2>Welcome, <%= user.username %>!</h2>
  <a href="/task/add" class="btn btn-primary mb-3">Add Task</a>
  <a href="/logout" class="btn btn-danger mb-3 float-end">Logout</a>

  <% if (tasks.length === 0) { %>
    <p>No tasks yet.</p>
  <% } else { %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Priority</th>
          <th>Due Date</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.description %></td>
            <td><%= task.priority %></td>
            <td><%= task.dueDate %></td>
            <td><%= task.status %></td>
            <td>
              <a href="/task/edit/<%= task.id %>" class="btn btn-sm btn-warning">Edit</a>
              <form action="/task/delete/<%= task.id %>" method="POST" style="display:inline-block;">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>
</body>
</html>
