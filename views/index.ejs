<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Task Dashboard</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  
<!-- Search & Priority Filter -->
<form action="/" method="GET" class="task-search-form">
  <input 
    type="text" 
    name="search" 
    placeholder="Search tasks..." 
    value="<%= typeof search !== 'undefined' ? search : '' %>">
  
  <select name="priority">
    <option value="">All Priorities</option>
    <option value="High" <%= priority === 'High' ? 'selected' : '' %>>High</option>
    <option value="Medium" <%= priority === 'Medium' ? 'selected' : '' %>>Medium</option>
    <option value="Low" <%= priority === 'Low' ? 'selected' : '' %>>Low</option>
  </select>

  <input 
    type="date" 
    name="dueDate" 
    value="<%= typeof dueDate !== 'undefined' ? dueDate : '' %>">

  <button type="submit">Filter</button>
</form>


  <header>
    <h1>ðŸ“‹ My Tasks Today</h1>
    <a class="btn" href="/add">+ Add Task</a>
  </header>

  <main>
    <% if(tasks.length === 0){ %>
      <p>No tasks yet. Add one!</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Task</th>
            <th>Priority</th>
            <th>Due Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% tasks.forEach(task => { %>
            <tr class="<%= task.priority.toLowerCase() %>">
              <td><%= task.name %></td>
              <td><%= task.priority %></td>
              <td><%= task.due %></td>
              <td>
                <a class="edit" href="/edit/<%= task.id %>">Edit</a>
                <a class="delete" href="/delete/<%= task.id %>">Delete</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </main>

  <nav class="navbar">
    <a href="/calendar" class="nav-item">ðŸ—“ Calendar</a>
    <a href="/add" class="nav-add">+</a>
    <a href="/" class="nav-item active">ðŸ“‹ Tasks</a>
  </nav>

</body>
</html>
